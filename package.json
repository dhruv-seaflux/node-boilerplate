{
  "name": "express-typescript-boilerplate",
  "version": "1.0.14",
  "description": "An Express boilerplate backend",
  "author": "Edwin Hernandez",
  "repository": "edwinhern/express-typescript-2024",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "start": "tsc && tsc-alias && node dist",
    "build": "tsc && tsc-alias",
    "prepare": "husky",
    "env": "sync-dotenv",
    "format": "biome check --write src/",
    "lint": "biome lint --error-on-warnings src/",
    "liquibase": "cd liquibase && liquibase update",
    "liquibase-clear-checksums": "cd liquibase && liquibase clear-checksums",
    "liquibase-rollback": "cd liquibase && liquibase --changeLogFile=changelog.xml rollbackCount 1",
    "liquibase-dev": "cd liquibase && liquibase update --defaultsFile=./liquibase-dev.properties",
    "liquibase-dev-rollback": "cd liquibase && liquibase --defaultsFile=./liquibase-dev.properties rollbackCount 1",
    "liquibase-stage": "cd liquibase && liquibase update --defaultsFile=./liquibase-stage.properties",
    "liquibase-stage-rollback": "cd liquibase && liquibase --defaultsFile=./liquibase-stage.properties rollbackCount 1",
    "liquibase-prod": "cd liquibase && liquibase update --defaultsFile=./liquibase-prod.properties",
    "liquibase-prod-rollback": "cd liquibase && liquibase --defaultsFile=./liquibase-prod.properties rollbackCount 1",
    "start:db": "node test-config/start-db.js && cd liquibase && liquibase update --defaultsFile=./liquibase-test.properties",
    "stop:db": "docker-compose down -v",
    "test": "yarn start:db && jest && yarn stop:db"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@types/node": "^22.13.4",
    "bcrypt": "^5.1.1",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.11.20",
    "morgan": "^1.10.0",
    "pg": "^8.13.3",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": ["biome check --apply --no-errors-on-unmatched"]
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
